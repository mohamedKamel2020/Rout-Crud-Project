@model IEnumerable<IdentityRole>

<h1 class="mb-4">All Roles</h1>

<a asp-controller="Role" asp-action="Create" class="btn btn-primary mb-2">Create New Role</a>


<form asp-action="Index" class="mb-4 mt-4">
	<div class="row align-items-center justify-content-center">
		<div class="col-8">
			<input type="text" placeholder="Search By Name" name="SearchValue" class="form-control" />
		</div>
		<div class="col-4">
			<input type="submit" value="Search" class="btn btn-primary"/>
		</div>
	</div>
</form>
@if (Model.Count() > 0)
{
	<table class="mt-3 table table-hover table-striped">
		<thead>
			<tr>

				<th>@Html.DisplayNameFor(R=>R.Id)</th>
				<th>@Html.DisplayNameFor(R=>R.Name)</th>
				
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var role in Model)
			{
				<tr>
					<td>@Html.DisplayFor(R=>@role.Id)</td>
					<td>@Html.DisplayFor(R=>@role.Name)</td>
				
					<partial name="_ButtonsPartialView" model="@role.Id">
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-5 alert alert-warning">
		<h3>There is no User</h3>
	</div>
}